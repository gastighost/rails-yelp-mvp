<%= simple_form_for [ @restaurant ] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category %>
  <%= f.submit "Add your restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Return to list of restaurants", restaurants_path, class: 'btn btn-secondary mt-3' %>
